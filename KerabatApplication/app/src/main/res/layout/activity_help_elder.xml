<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".HelpElderActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="JANGAN PANIK DAN TETAP TENANG"
        android:textAlignment="center"
        android:textColor="#1C3B60"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="72dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/warningpurplebutton"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Beberapa tindakan yang dapat kamu lakukan:"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="371dp" />

    <Button
        android:id="@+id/patientLocation_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FCCC12"
        android:fontFamily="@font/poppins_bold"
        android:text="LOKASI PASIEN"
        android:textColor="#1C3B60"
        android:textSize="20sp"
        app:cornerRadius="25dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="449dp" />

    <Button
        android:id="@+id/nearestMedicalCenter_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FCCC12"
        android:fontFamily="@font/poppins_bold"
        android:text="RS Terdekat"
        android:textColor="#1C3B60"
        android:textSize="20sp"
        app:cornerRadius="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="524dp" />

    <Button
        android:id="@+id/firstaid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FCCC12"
        android:fontFamily="@font/poppins_bold"
        android:text="Pertolongan Pertama"
        android:textColor="#1C3B60"
        android:textSize="20sp"
        app:cornerRadius="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="599dp" />

</androidx.constraintlayout.widget.ConstraintLayout>