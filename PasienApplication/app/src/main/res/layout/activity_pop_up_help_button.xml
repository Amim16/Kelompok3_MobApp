<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEEF3"
    tools:context=".PopUpHelpButton">

    <!-- Sepertinya kamu membutuhkan bantuan -->
    <TextView
        android:id="@+id/sepertinya_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="6sp"
        android:text="@string/sepertinya_"
        android:textColor="#1C3B60"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sepertinya_"
        app:srcCompat="@drawable/needhelpbuttoncountdown" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        app:button_background="@drawable/button_shape"
        app:button_bottom_padding="12dp"
        app:button_image_disabled="@drawable/cancel_button"
        app:button_left_padding="15dp"
        app:button_right_padding="15dp"
        app:button_top_padding="11dp"
        app:inner_text_background="@drawable/inner_text_shape"
        app:inner_text_bottom_padding="15dp"
        app:inner_text_size="12sp"
        app:inner_text_top_padding="15dp" />

    <TextView
        android:id="@+id/geserUntukBatal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/geser_untuk_membatalkan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/poppins_bold"
        android:textSize="10sp"
        android:textColor="#5C6066"
        />

</RelativeLayout>